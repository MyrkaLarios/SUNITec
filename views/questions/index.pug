extends ../layouts/coordinator

block content
  .filter
    .text Filtrar:
    select.level-selector(id="level-selector")
      option(value='' disabled selected) Nivel
      option(value='1') 1
      option(value='2') 2
      option(value='3') 3
      option(value='4') 4
      option(value='5') 5
      option(value='6') 6
      option(value='7') 7

    select.unitSelector
      option(value='' disabled selected) Unidad

    each levelUnits, level in levelsData
      select.unitSelector.d-none(id=`level${level}-units-selector`)
        each unit  in levelUnits
          option(value=`${unit[0]}`) #{unit[1]}

    a.btn.btn-primary.search-btn Buscar

  div.scroll.scrollspy-example(data-spy='scroll')
    each question in questions
      h4 Nivel #{question.id_nivel} - Unidad #{question.num_unidad}: #{question.nombre_unidad}
      p #{question.descripcion}

  .add-question-btn-container
    a.btn.btn-primary.add-question-btn(href="/coordinator/questions/new") Agregar pregunta

